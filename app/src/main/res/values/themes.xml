<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CountryList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_yellow</item>
        <item name="colorSecondaryVariant">@color/secondary_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/light_grey_5</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>

        <item name="colorSurfaceLightIcons">@color/light_grey_3</item>

        <item name="colorSurfaceBorder">@color/light_grey_2</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="materialCardViewStyle">@style/Theme.CountryList.CardView</item>

        <item name="actionBarSize">70dp</item>
    </style>

</resources>