<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CountryList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_black_1</item>
        <item name="colorPrimaryVariant">@color/light_black_1</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_yellow</item>
        <item name="colorSecondaryVariant">@color/secondary_yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/light_black_1</item>
        <item name="colorSurfaceVariant">@color/light_black_2</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>

        <item name="colorSurfaceLightIcons">@color/light_black_4</item>
        <item name="colorSurfaceBorder">@color/light_black_3</item>

        <item name="android:windowBackground">@color/light_black_1</item>

        <item name="materialCardViewStyle">@style/Theme.CountryList.CardView</item>

        <item name="actionBarSize">70dp</item>
    </style>
</resources>